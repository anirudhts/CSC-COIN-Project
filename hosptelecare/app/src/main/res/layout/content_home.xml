<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E4F1FE"
    android:padding="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="b2wdevelopers.com.hosptelecare.HomeActivity"
    tools:showIn="@layout/activity_home">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="10">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:src="@drawable/doc"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.5">
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="#4183D7"
                android:text="Medical records"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:textColor="#E4F1FE"
                android:id="@+id/b1"
                android:onClick="medrec"
                >

            </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="Bill Payment"
                    android:layout_margin="5dp"
                    android:textColor="#E4F1FE"
                    android:padding="10dp"
                    android:background="#4183D7"
                    android:id="@+id/b2"
                    android:onClick="billpay"
                    >

                </Button>

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.5">
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="Hospital Map"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:textColor="#E4F1FE"
                    android:background="#4183D7"
                    android:id="@+id/b3"
                    android:onClick="hosmap"
                    >

                </Button>
                <Button
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="Customer Feedback"
                    android:textColor="#E4F1FE"
                    android:padding="10dp"
                    android:layout_margin="5dp"
                    android:background="#4183D7"
                    android:id="@+id/b4"
                    android:onClick="cusfeed"
                    >

                </Button>
            </TableRow>

        </TableLayout>

    </LinearLayout>
</RelativeLayout>
